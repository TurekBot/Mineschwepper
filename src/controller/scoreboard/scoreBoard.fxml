<?xml version="1.0" encoding="UTF-8"?>

<?import controller.scoreboard.BombCounter?>
<?import controller.scoreboard.Clock?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>


<fx:root prefWidth="500.0" stylesheets="@../../resources/styles.css" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <left>
       <BombCounter fx:id="bombCounter" prefWidth="70.0" styleClass="digital" BorderPane.alignment="CENTER_LEFT" />
   </left>
   <right>
      <Clock fx:id="clock" alignment="CENTER_RIGHT" prefWidth="70.0" styleClass="digital" BorderPane.alignment="CENTER_RIGHT" />
   </right>
   <center>
      <Button fx:id="middleButton" mnemonicParsing="false" onAction="#turnItUp" text="Start" BorderPane.alignment="CENTER" />
   </center>
</fx:root>
